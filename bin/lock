#!/bin/bash

#xscreensaver-command -lock
#exit 0

scrot /tmp/scrot.png

#convert -scale 5% -scale 2000% /tmp/scrot.png /tmp/blur.png
convert -blur 0x6 /tmp/scrot.png /tmp/blur.png

i3lock \
    --insidevercolor=FFFFFF00 \
    --insidewrongcolor=AA0000FF \
    --insidecolor=00000044 \
    --ringvercolor=FFFFFF44 \
    --ringwrongcolor=AA0000FF \
    --ringcolor=FFFFFFAA \
    --textcolor=FFFFFF00 \
    --linecolor=00000000 \
    --keyhlcolor=0088FFFF \
    --bshlcolor=000000FF \
    -i /tmp/blur.png

