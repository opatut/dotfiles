#avoid flicker
double_buffer yes

#own window to run simultanious 2 or more conkys
own_window yes
own_window_transparent no
own_window_argb_visual yes
own_window_type panel
own_window_class conky-semi
own_window_hints undecorated,above,sticky,skip_taskbar,skip_pager

#borders
draw_borders no

#shades
draw_shades no

#position
gap_y 2
gap_x 2
border_inner_margin 2
alignment top_left

#behaviour
update_interval 1.0
music_player_interval 1.0

#colour
default_color   FFFFFF # Values
color0          0099FF
color2          0099FF # active clock
color3          DDDDDD # inactive clock

own_window_colour 000000
own_window_argb_value 100

#font
use_xft yes
#xftfont Abel:bold:pixelsize=12
xftfont Tamsyn:pixelsize=12
#to prevent window from moving
use_spacer none
minimum_size 1368 0

mpd_host _mpd
mpd_port 6600

