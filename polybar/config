[colors]
alert = ${xrdb:color1}
; primary = #4191d9
primary = #63c5ff
; primary = ${xrdb:color2}
secondary = ${xrdb:color4}
foreground = ${xrdb:color15}
; background = ${xrdb:color0}
background = #AA000000
background-alt = ${colors.primary}

; labelBattery    = ${xrdb:color2}
; labelCpu        = ${xrdb:color3}
; labelDate       = ${xrdb:color12}
; labelClock      = ${xrdb:color13}
; labelMemory     = ${xrdb:color5}
; labelNowplaying = ${xrdb:color6}
; labelTemp       = ${xrdb:color10}
; labelVolume     = ${xrdb:color11}
; labelWlan       = ${xrdb:color9}
; labelWorktime   = ${xrdb:color11}
labelBattery    = ${colors.primary}
labelCpu        = ${colors.primary}
labelDate       = ${colors.primary}
labelClock      = ${colors.primary}
labelMemory     = ${colors.primary}
labelNowplaying = ${colors.primary}
labelTemp       = ${colors.primary}
labelVolume     = ${colors.primary}
labelWlan       = ${colors.primary}
labelWorktime   = ${colors.primary}

[bar/top]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 32
; bottom = true
;offset-x = 1%
; offset-y = 0%
radius = 0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = "statusbar:size=11;3"
font-1 = "Fira Mono:size=11;2"
font-2 = "Fira Mono:size=11:weight=bold;2"
; font-1 = "Misc Tamsyn:size=14;2"
; font-2 = "Misc Tamsyn:size=14:weight=bold;2"
font-3 = "Fira Mono:size=11;2"

modules-left = i3 
; modules-center = xwindow
modules-right = worktime nowplaying volume memory cpu wlan battery date clock

tray-position = right
tray-padding = 0
; tray-transparent = true
; tray-background = #000

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

[bar/external]
monitor = ${env:MONITOR:HDMI1}
width = 100%
height = 32
bottom = true
;offset-x = 1%
; offset-y = 10%
radius = ${bar/top.radius}
fixed-center = ${bar/top.fixed-center}

background = ${bar/top.background}
foreground = ${bar/top.foreground}

line-size = 0
border-size = 0

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = ${bar/top.font-0}
font-1 = ${bar/top.font-1}
font-2 = ${bar/top.font-2}

modules-left = i3 
modules-right = nowplaying wlan battery date clock

[module/worktime]
type = custom/script
interval = 5
exec = curl -s 'http://localhost:8181/stats?formatted' | jq -j '.today.active + " (" + .current + ")"'
format = <label>
label = %output:0:80:...%
format-prefix = "WRK "
format-prefix-foreground = ${colors.labelWorktime}

[module/nowplaying]
type = custom/script
interval = 10
exec = mcp current-song 
format = <label>
label = %output:0:40:...%
format-prefix = "MUS "
format-prefix-foreground = ${colors.labelNowplaying}

[module/temp]
type = custom/script
interval = 10
exec = echo $(sensors | grep Ts0P | awk '{print $2}' | grep -Eo '\-?[0-9\.]+') \| $(sensors | grep "Package id 0" | awk '{print $4}' | grep -Eo '\-?[0-9\.]+')
format = <label>°C
format-prefix = "TMP "
format-prefix-foreground = ${colors.labelTemp}

[module/slack]
type = custom/script
interval = 30
exec = bash -c '~/.bin/slack-status get --format simple'

[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = false

label-mode-padding = 1
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-font = 3
label-focused-background = ${colors.background-alt}
label-focused-foreground = ${colors.background}
label-focused-padding = ${self.label-mode-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = ${self.label-mode-padding}
label-unfocused-font = ${self.label-focused-font}
label-unfocused-background = #000
label-unfocused-foreground = #FFF

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${colors.background}
label-visible-foreground = ${colors.primary}
label-visible-padding = ${self.label-mode-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = ${self.label-mode-padding}

[module/mpd]
type = internal/mpd
format-online = <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 40
label-song-ellipsis = true

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU "
format-prefix-foreground = ${colors.labelCpu}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "MEM "
format-prefix-foreground = ${colors.labelMemory}
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlan0
interval = 3.0

format-connected-prefix = "WIFI "
format-connected-prefix-foreground = ${colors.labelWlan}
format-connected = <label-connected>
label-connected = %essid% %local_ip%

format-disconnected-prefix = "WIFI "
format-disconnected-prefix-foreground = ${colors.labelWlan}
format-disconnected = no wifi
format-disconnected-foreground = ${colors.alert}


[module/date]
type = internal/date
interval = 60

date = "%b %d"
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = "DAY "
format-prefix-foreground = ${colors.labelDate}
format-prefix-font = 3

label = %date%

[module/clock]
type = internal/date
interval = 5

time = %H:%M
time-alt = %H:%M:%S

format-prefix = "NOW "
format-prefix-foreground = ${colors.labelClock}
format-prefix-font = 3

label = %time%

[module/volume]
type = internal/pulseaudio


format-volume = <label-volume>
format-volume-prefix = "VOL "
format-volume-prefix-foreground = ${colors.labelVolume}

format-muted-prefix = "VOL "
format-muted-foreground = ${colors.labelVolume}
label-muted = mute
label-muted-foreground = ${colors.foreground}
label-volume = %percentage%%


[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging = <label-charging> <animation-charging> 
format-charging-prefix = "BAT "
format-charging-prefix-foreground = ${colors.labelBattery}

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-prefix = "BAT "
format-discharging-prefix-foreground = ${colors.labelBattery}

format-full = <label-full> 
format-full-prefix = "BAT "
format-full-prefix-foreground = ${colors.labelBattery}

ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.alert}
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.foreground}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = ${colors.foreground}
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-warn = <ramp> <label-warn>

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

