# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

set $window_color #555555
set $workspace_color #FF9900

bar {
    #mode hide
    position top
    status_command python ~/.i3/status.py
    font xft:DejaVu Mono Bold 9

    colors {
        background #050505
        statusline #EEEEEE
        focused_workspace  $workspace_color  $workspace_color #000000
        active_workspace   #111111 #111111 #3D8CDB
        inactive_workspace #111111 #111111 #aaaaaa
        urgent_workspace   #ffffff #900000
    }
}

