# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

set $window_color #555555
set $workspace_color #FF9900

# empty bar on external monitors, only show workspace navigator
bar {
    status_command bash -c 'while true; do date "+%a %d. %b | %H:%M:%S"; sleep 1; done'
    output VGA1
    output DP1
    output DP2
    output HDMI1
    output HDMI2 
    tray_output none
    position top
}

bar {
    position top
    output eDP1
    separator_symbol " | "
    status_command bash ~/.i3/status/run.sh
    font xft:Material-Design-Iconic-Font, Ubuntu Mono Bold 12

