[colors]
alert = #AA0000
primary = #88C0D0
secondary = #FF6600
foreground = #AAFFFFFF
background = #AA000000
background-alt = ${colors.primary}
label = #FFFFFF

[bar/top]
; monitor = ${env:MONITOR:eDP1}
width = 100%
height = 26
; bottom = true
;offset-x = 1%
; offset-y = 0%
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
border-size = 4
border-color = #00000000
radius = 4

padding-left = 0
padding-right = 12
module-margin-left = 4
module-margin-right = 4

font-0 = "Ubuntu:size=10:weight=normal;2"
font-1 = "Ubuntu:size=10:weight=bold;2"
font-2 = "Font Awesome 5 Free:size=10:weight=bold;1"

modules-left = i3 
modules-center = nowplaying
modules-right = wlan volume memory cpu battery date clock

; tray-padding = 8
; tray-transparent = true
; tray-background = #000000
; tray-offset-x = 100
; tray-offset-y = 0

tray-position = right
tray-reparent = true
; wm-restack = i3
; override-redirect = false

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

; [bar/external]
; monitor = ${env:MONITOR:HDMI1}
; width = 100%
; height = 32
; bottom = true
; ;offset-x = 1%
; ; offset-y = 10%
; radius = ${bar/top.radius}
; fixed-center = ${bar/top.fixed-center}
;
; background = ${bar/top.background}
; foreground = ${bar/top.foreground}
;
; line-size = 0
; border-size = 0
;
; padding-left = 0
; padding-right = 2
;
; module-margin-left = 1
; module-margin-right = 2
;
; modules-left = i3 
; modules-right = nowplaying battery date clock

; [module/worktime]
; type = custom/script
; interval = 5
; exec = curl -s 'http://localhost:8181/stats?formatted' | jq -j '.today.active + " (" + .current + ")"'
; format = <label>
; label = %output:0:80:...%
; format-prefix = "WRK "
; format-prefix-foreground = ${colors.label}
; format-prefix-font = 2

[module/nowplaying]
type = custom/script
interval = 10
exec = /home/paul/.bin/mcp current-song 
format = <label>
label = %output:0:40:...%
format-prefix = "   "
format-prefix-foreground = ${colors.label}
format-prefix-font = 3

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = false

label-mode-padding = 3
label-mode-font = 3
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-font = 3
label-focused-background = ${colors.background-alt}
label-focused-foreground = ${colors.background}
label-focused-padding = ${self.label-mode-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = ${self.label-mode-padding}
label-unfocused-font = ${self.label-focused-font}
label-unfocused-background = ${colors.background}
label-unfocused-foreground = #FFFFFF

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${colors.background}
label-visible-foreground = ${colors.primary}
label-visible-padding = ${self.label-mode-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = ${self.label-mode-padding}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "   "
format-prefix-foreground = ${colors.label}
format-prefix-font = 2
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "   "
format-prefix-foreground = ${colors.label}
format-prefix-font = 2
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp61s0
interval = 3.0

format-connected-prefix = "   "
format-connected-prefix-foreground = ${colors.label}
format-connected-prefix-font = 2
format-connected = <label-connected>
label-connected = %essid% %local_ip%

format-disconnected-prefix = "   "
format-disconnected-prefix-foreground = ${colors.label}
format-disconnected-prefix-font = 2
format-disconnected = no wifi
format-disconnected-foreground = ${colors.alert}


[module/date]
type = internal/date
interval = 60

date = "%b %d"
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = "   "
format-prefix-foreground = ${colors.label}
format-prefix-font = 2

label = %date%

[module/clock]
type = internal/date
interval = 5

time = %H:%M
time-alt = %H:%M:%S

format-prefix = "   "
format-prefix-foreground = ${colors.label}
format-prefix-font = 2

label = %time%

[module/volume]
type = internal/pulseaudio
sink = 0

format-volume = <label-volume>
format-volume-prefix = "   "
format-volume-prefix-foreground = ${colors.label}
format-volume-prefix-font = 2

format-muted-foreground = ${colors.label}
format-muted-prefix = "   "
format-muted-prefix-font = 2

label-muted = mute
label-muted-foreground = ${colors.foreground}
label-volume = %percentage%%

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 95

format-charging = <label-charging>
format-charging-prefix = "  "
format-charging-prefix-foreground = ${colors.label}
format-charging-prefix-font = 2

format-discharging = <label-discharging>
format-discharging-prefix = "   "
format-discharging-prefix-foreground = ${colors.label}
format-discharging-prefix-font = 2

format-full = <label-full>
format-full-prefix = " "
format-full-prefix-foreground = ${colors.label}
format-full-prefix-font = 2


[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-warn = <ramp> <label-warn>

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.secondary}

ramp-0 = |..
ramp-1 = ||.
ramp-2 = |||
ramp-foreground = ${colors.foreground}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

