[user]
	name = Paul Bienkowski
    email = pb@opatut.de

[core]
    excludesfile = ~/.gitignore
	pager = less -x4

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
	ui = true

[mergetool]
    keepBackup = false
    prompt = false

[merge]
    tool = meld
    edit = false

[difftool]
    prompt = false
    tool = meld

[alias]
    mkpatch = format-patch master --stdout
    lg = log --graph --all --format=format:'%C(yellow)%h%C(reset) - %C(cyan)%ci%C(reset) %C(green)(%cr)%C(reset) %C(bold yellow)%d%C(reset)%n          %C(white)%s%C(reset) %C(bold white)- %cn%C(reset)%n' --abbrev-commit --date=relative
    l = log --pretty=oneline --graph --abbrev-commit
    s = status -s
    tags = tag -l
    branches = branch -a
    remotes = remote -v

[push]
	default = simple

[status]
    showUntrackedFiles = all
