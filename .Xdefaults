URxvt.saveLines: 12000
URxvt.font: xft:Tamsyn:size=9
URxvt.boldFont:xft:Tamsyn:size=9
#URxvt.font: xft:DejaVu Sans Mono:size=8
URxvt.foreground: #CCCCCC
URxvt.scrollBar: false
URxvt.termName: xterm-256color

#URxvt.background: Black
#URxvt*.transparent: true
#URxvt*.shading: 20
urxvt*depth: 32
urxvt*background: rgba:0000/0000/0000/C800

URxvt.perl-ext-common: default,font-size,clipboard,matcher,keyboard-select

URxvt.keysym.C-Up: perl:font-size:increase
URxvt.keysym.C-Down: perl:font-size:decrease
URxvt.keysym.C-S-Up: perl:font-size:incglobal
URxvt.keysym.C-S-Down: perl:font-size:decglobal

!! URLs
URxvt.keysym.C-U: perl:url-select:select_next
URxvt.url-launcher: xdg-open
URxvt.underlineURLs: True
URxvt.matcher.button: 1

#URxvt.clipboard.autocopy: true
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-C: perl:clipboard:copy
URxvt.keysym.M-V: perl:clipboard:paste
URxvt.copyCommand: xclip -selection clipboard
URxvt.pasteCommand: xclip -selection clipboard -o


!! Cursor word movement
URxvt*altSendsEscape: true
URxvt.keysym.Control-Up:   \033[1;5A
URxvt.keysym.Control-Down:    \033[1;5B
URxvt.keysym.Control-Left:    \033[1;5D
URxvt.keysym.Control-Right:    \033[1;5C
 
