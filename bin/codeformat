#!/bin/bash

if [[ "$1" == "-" ]]; then
    TMP=$(mktemp)-$(basename "$2")
    cat > $TMP
    output=$($0 $TMP)
    result=$?
    if [[ $result != 0 ]]; then
        echo $output >&2
        rm $TMP
        exit $result
    else
        cat $TMP
        rm $TMP
        exit 0
    fi
fi

TAB_WIDTH=$(editorconfig $(realpath $1) | grep tab_width | sed 's/^.*\=//')
TAB_WIDTH=${TAB_WIDTH:-2}
PRETTIER_ARGS="--single-quote --trailing-comma es5 --no-semi --print-width 100 --no-bracket-spacing --jsx-bracket-same-line --write --tab-width $TAB_WIDTH"

shebang_bin=$(cat "$1" | grep -E '^#!/.*' | tr '/ ' '\n' | tail -n1)

if [[ "$1" =~ ^.*(js|ts)$ ]]; then
    ESLINT=$(which eslint)
    if [ -f "./node_modules/.bin/eslint_d" ]; then
        ESLINT="./node_modules/.bin/eslint_d"
    elif [ -f "./node_modules/.bin/eslint" ]; then
        ESLINT="./node_modules/.bin/eslint"
    fi

    $ESLINT --fix --no-ignore $1
elif [[ "$1" =~ ^.*(h|c|cpp|c\+\+|H|hpp|h\+\+|hxx|cxx|cs|ino)$ ]]; then
    astyle \
        --style=java \
        --pad-oper \
        --pad-comma \
        --pad-header \
        --unpad-paren \
        --align-pointer=type \
        --align-reference=type \
        --break-one-line-headers \
        --add-braces \
        --suffix=none \
        --lineend=linux \
        $1
elif [[ "$1" == *.bib ]]; then
    TMP=$(mktemp)
    python ~/.dotfiles/externals/prettybib/prettybib.py --input=$1 --output=$TMP
    mv $TMP $1
elif [[ "$1" == *.py || "$shebang_bin" =~ ^python[23]?$ ]]; then
    autopep8 \
        --in-place  \
        --max-line-length 160 \
        --aggressive \
        $1

elif [[ "$1" == *.go ]]; then
    gofmt -w $1
elif [[ "$1" == *.kt ]]; then
    ktlint -F $1
elif [[ "$1" == *.rs ]]; then
    rustftm $1
elif [[ "$1" == *.json ]]; then
    TMP=$(mktemp)
    yq -M . $1 > $TMP
    if [ $? == 0 ]; then
        mv $TMP $1
    fi
elif [[ "$1" =~ ^.*\.ya?ml$ ]]; then
    TMP=$(mktemp)
    yq --yaml-output -M . $1 > $TMP
    if [ $? == 0 ]; then
        mv $TMP $1
    fi
elif [[ "$1" =~ ^.*\.html?$ ]]; then
    tidy -utf8 -miq -wrap 0 --preserve-entities yes $1 
elif [[ "$1" =~ ^.*\.(css|sass|scss|less)?$ ]]; then
    prettier $PRETTIER_ARGS --write $1
elif [[ "$1" == *.sql ]]; then
    TMP=$(mktemp)
    cat $1 | sql-formatter-cli > $TMP
    if [ $? == 0 ]; then
        mv $TMP $1
    fi
else
    echo "Filetype not supported."
    exit 1
fi
