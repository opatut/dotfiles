#avoid flicker
double_buffer yes

#own window to run simultanious 2 or more conkys
own_window yes
own_window_transparent yes
own_window_argb_visual yes
own_window_type desktop
own_window_class conky-semi

#borders
draw_borders no

#shades
draw_shades no

#position
gap_x 0 
gap_y 10
alignment top_middle

#behaviour
update_interval 5

#colour
default_color  fffd71
default_color  aabbff 

#default_shade_color 000000
own_window_colour 000000

#font
use_xft yes
xftfont Consolas:pixelsize=10
#to prevent window from moving
use_spacer none 
minimum_size 1280 0


mpd_host localhost
mpd_port 6600
$mpd_artist = ""

